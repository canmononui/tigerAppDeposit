            android:id="@+id/textTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_medium"
            android:text="รายการฝากเงิน"
            android:textColor="@color/black"
            android:textSize="45sp"/>

        <!-- LAYOUT RIGHT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <!-- DROP MONEY BUTTON -->
            <Button
                android:id="@+id/buttonDropMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_white"
                android:fontFamily="@font/kanit_regular"
                android:drawableStart="@drawable/drop_money"
                android:drawablePadding="30dp"
                android:paddingStart="30dp"
                android:paddingTop="25dp"
                android:paddingEnd="30dp"
                android:paddingBottom="25dp"
                android:stateListAnimator="@null"
                android:text="ซองดรอบ"
                android:textColor="@color/black"
                android:textSize="45dp" />
        </LinearLayout>
        <!-- END LAYOUT RIGHT -->

    </LinearLayout>
    <!-- END TOP DES -->

    <!-- MONEY AMOUNT -->
    <RelativeLayout
        android:id="@+id/moneyAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutTopDes"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_amount_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTopDes">

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyAmountText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_medium"
            android:text="ยอดเงินจากเครื่อง"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyAmountText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/moneyAmountText3"
            android:fontFamily="@font/kanit_medium"
            android:text="฿"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyAmountText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/kanit_medium"
            android:text="1,000"
            android:textColor="@color/black"
            android:textSize="45sp" />
    </RelativeLayout>
    <!-- MONEY AMOUNT -->

    <!-- DROP MONEY AMOUNT -->
    <RelativeLayout
        android:id="@+id/moneyDrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moneyAmount"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_drop_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyAmount">

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyDropText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_medium"
            android:text="ยอดเงินจากซองดรอบ"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyDropText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/moneyDropText3"
            android:fontFamily="@font/kanit_medium"
            android:text="฿"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyDropText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/kanit_medium"
            android:text="500"
            android:textColor="@color/black"
            android:textSize="45sp" />
    </RelativeLayout>
    <!-- DROP MONEY AMOUNT -->

    <!-- MONEY TOTAL -->
    <RelativeLayout
        android:id="@+id/moneyTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moneyAmount"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_total_darkgrey"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyDrop">

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyTotalText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_medium"
            android:text="รวมทั้งสิ้น"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyTotalText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/moneyTotalText3"
            android:fontFamily="@font/kanit_medium"
            android:text="฿"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyTotalText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/kanit_medium"
            android:text="1,500"
            android:textColor="@color/black"
            android:textSize="45sp" />
    </RelativeLayout>
    <!-- END MONEY TOTAL -->

    <!-- LAYOUT BUTTON -->
    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="100"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- CANCEL BUTTON -->
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:background="@drawable/bg_button_white"
            android:fontFamily="@font/kanit_regular"
            android:padding="25dp"
            android:stateListAnimator="@null"
            android:text="ยกเลิก"
            android:textColor="@color/black"
            android:textSize="45dp" />

        <!-- SUBMIT BUTTON -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="70"
            android:background="@drawable/bg_button_yellow"
            android:fontFamily="@font/kanit_regular"
            android:padding="25dp"
            android:stateListAnimator="@null"
            android:text="ยืนยัน"
            android:textColor="@color/black"
            android:textSize="45dp" />

    </LinearLayout>
    <!-- END LAYOUT BUTTON -->

</androidx.constraintlayout.widget.ConstraintLayout>